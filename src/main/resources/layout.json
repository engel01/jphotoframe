{
  "widgets": [
    {
      "type": "anchor",
      "anchor": [1, 0],
      "children": [
        {
          "type": "text",
          "transform": {
            "origin": [1, 0],
            "offset": [-30, 30],
            "showBounds": "true"
          },
          "text" : {
            "data": "$time",
            "size": 120,
            "outlineWidth": 3
          }
        },
        {
          "type": "text",
          "transform": {
            "origin": [0, 0],
            "offset": [-30, 150],
            "rotate": 90,
            "showBounds": "true"
          },
          "text" : {
            "data": "$date",
            "size": 50,
            "outlineWidth": 3
          }
        }
      ]
    },
    {
      "type": "anchor",
      "anchor": [1, 1],
      "children": [
        {
          "type": "text",
          "transform": {
            "origin": [1, 1],
            "offset": [-30, -30],
            "showBounds": "true"
          },
          "text" : {
            "data": "JPhotoFrame 0.4",
            "format": "%s",
            "size": 20
          }
        }
      ]
    },
    {
      "type": "anchor",
      "anchor": [0, 1],
      "children": [
        {
          "type": "text",
          "transform": {
            "origin": [0, 1],
            "offset": [30, -30],
            "showBounds": "true"
          },
          "text" : {
            "data": "$weather.geo",
            "format": "%2$s, %1$s",
            "size": 40
          }
        },

        {
          "type": "weather",
          "transform": {
            "origin": [0, 1],
            "offset": [30, -120],
            "showBounds": "true"
          },
          "text" : {
            "data": "$day",
            "size": 20
          },
          "items" : {
            "gap": 120,
            "gapPosition": "leading",
            "orientation": "vertical"
          }
        },

        {
          "type": "weather",
          "transform": {
            "origin": [0, 1],
            "offset": [100, -120],
            "showBounds": "true"
          },
          "text" : {
            "data": "$condition",
            "size": 20
          },
          "items" : {
            "gap": 120,
            "gapPosition": "leading",
            "orientation": "vertical"
          }
        },

        {
          "type": "weather",
          "transform": {
            "origin": [0, 1],
            "offset": [100, -95],
            "showBounds": "true"
          },
          "text" : {
            "data": "$temperature",
            "format": "%1$s° ➔ %2$s°",
            "size": 20
          },
          "items" : {
            "gap": 120,
            "gapPosition": "leading",
            "orientation": "vertical"
          }
        },

        {
          "type": "weather",
          "transform": {
            "origin": [0, 1],
            "offset": [30, -90],
            "showBounds": "true"
          },
          "text" : {
            "data": "$date",
            "format": "%1$Tb",
            "size": 20
          },
          "items" : {
            "gap": 120,
            "gapPosition": "leading",
            "orientation": "vertical"
          }
        },

        {
          "type": "weather",
          "transform": {
            "origin": [0, 1],
            "offset": [30, -60],
            "showBounds": "true"
          },
          "text" : {
            "data": "$date",
            "format": "%1$Td",
            "size": 20
          },
          "items" : {
            "gap": 120,
            "gapPosition": "leading",
            "orientation": "vertical"
          }
        }

      ]
    }
  ]
}